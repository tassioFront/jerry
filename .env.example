# Database Configuration
# For local development (without Docker)
DATABASE_URL=postgresql://auth_user:auth_password@localhost:5432/auth_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# PostgreSQL Configuration (for Docker Compose)
POSTGRES_USER=auth_user
POSTGRES_PASSWORD=auth_password
POSTGRES_DB=auth_db
POSTGRES_PORT=5432

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO # change to DEBUG to see debug logs
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Email Configuration (for future email service integration)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourservice.com

# Service Info
SERVICE_NAME=auth-service
SERVICE_VERSION=1.0.0
